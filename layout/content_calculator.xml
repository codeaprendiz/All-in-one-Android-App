<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLinearLayoutCalculator"
    android:background="#ffffe5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="android.example.com.allinone.calculator"
    tools:showIn="@layout/activity_calculator">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:textColor="#212835"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:text="0"
        android:minHeight="40dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212835"
        android:orientation="horizontal"
        android:id="@+id/linearLayout1"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >




        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="7"
            android:id="@+id/button7"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="8"
            android:id="@+id/button8"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="9"
            android:id="@+id/button9"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="+"
            android:id="@+id/buttonp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#212835"
        android:id="@+id/linearlayout2"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="4"
            android:id="@+id/button4"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="5"
            android:id="@+id/button5"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="6"
            android:id="@+id/button6"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="-"
            android:id="@+id/buttonm"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#212835"
        android:id="@+id/linearlayout3"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="1"
            android:id="@+id/button1"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="2"
            android:id="@+id/button2"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="3"
            android:id="@+id/button3"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="X"
            android:id="@+id/buttonmul"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#212835"
        android:id="@+id/linearlayout4"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text=":P"
            android:id="@+id/button0"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="="
            android:id="@+id/buttoneq"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="/"
            android:id="@+id/buttondiv"
            />

        <Button
            style="?android:attr/button"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="AC"
            android:id="@+id/buttonac"
            />
    </LinearLayout>


</LinearLayout>
